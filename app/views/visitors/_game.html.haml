.row.game
  %div{class: "small-#{(played_game == false) ? 6 : 5} columns teams"}
    %div= game['Visitor']
    %div= game['Home']

  - if played_game == true
    .small-2.columns.scores
      %div= (game['VisitorPts'].blank?) ? ' - ': game['VisitorPts']
      %div= (game['HomePts'].blank?) ? ' - ': game['HomePts']

  %div{class: "small-#{(played_game == false) ? 6 : 5} columns details"}
    %div.date= Time.parse(game['Date']).strftime('%a %b %d')
    %div
      %span.time= game['Start']
      %span.rink
        = (game['Facility'] == 'Indoor') ? 'Indoor' : 'Outdoor'

  - prev_game = Game.find_previous_games(game).first
  - unless prev_game.blank?
    %div{class: "small-12 columns history"}
      %p
        = "Last played: #{prev_game['season']}, #{prev_game['facility']}, "
        = get_game_result(prev_game, 'Vendetta')
.row